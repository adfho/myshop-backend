# Flask environment
FLASK_ENV=development

# Secret keys (REQUIRED in production)
SECRET_KEY=your-secret-key
JWT_SECRET_KEY=your-jwt-secret

# Database configuration
# Examples:
#   sqlite:///absolute/path/to/app.db
#   postgresql+psycopg2://user:password@localhost:5432/myshop
DATABASE_URL=sqlite:///app.db

# Application metadata
APP_VERSION=0.1.0

# Logging configuration
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_MAX_BYTES=5242880        # 5 MB
LOG_BACKUP_COUNT=5           # Keep last 5 log files

# Rate limiting
RATE_LIMIT_GENERAL=300 per minute
RATE_LIMIT_DEFAULT=300 per minute
RATE_LIMIT_AUTH=5 per minute
RATE_LIMIT_STORAGE_URI=memory://
# For Redis-backed limiting, use e.g. redis://:password@localhost:6379/0

# Enable/disable rate limiting entirely (useful for tests)
RATELIMIT_ENABLED=true

# Caching configuration
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300
# For Redis-backed caching, use: CACHE_REDIS_URL=redis://localhost:6379/0
# CACHE_REDIS_URL=
